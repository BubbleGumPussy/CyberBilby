---
import type { CollectionEntry } from 'astro:content';
import { getEntry } from 'astro:content';

import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Author from '../components/Author.astro';
import { toTitleCase } from '../libs/lib';

type Props = CollectionEntry<'blog'>['data'];

const { title, summary, category, pubDate, author, updatedDate, heroImage } = Astro.props;

let postAuthor = await getEntry('authors', author);
if(postAuthor === undefined) {
    postAuthor = await getEntry('authors', 'anonymous');
}
---

<html lang="en">
	<head>
		<BaseHead title={title} description={summary} />
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			.hero-image img {
				margin: 0 auto;
				border-radius: 12px;
				box-shadow: var(--box-shadow);
			}
			.prose {
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 1em;
				color: rgb(var(--gray-dark));
			}
            .title {
                text-align: center;

                margin-bottom: 2rem;
            }
			.header {
                display: flex;

                align-items: center;
                justify-content: center;

                gap: 1rem;

				margin-bottom: 1em;
				padding: 1em 0;
				line-height: 1;
			}
            .header .info {
                display: flex; 
                flex-direction: column;
                
                justify-content: center;
            }
            .header .info .category {
                color: gray;

                font-size: 1.5rem;
            }

            @media (max-width: 720px) {
                .header {
                    flex-direction: column;
                }
            }
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
                <div class="header">
                    
                    {heroImage && <div class="hero-image"><img src={heroImage} alt="hero image" /></div>}

                    <div class="info">
                        <h1>{title}</h1>
                        <span class="category">{toTitleCase(category)}</span>
                        <p>{summary}</p>
                        <Author name={postAuthor?.data.name} avatar={postAuthor.data.avatar} date={pubDate}></Author>
                    </div>
                </div>

                <hr />  

				<div class="prose">
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
