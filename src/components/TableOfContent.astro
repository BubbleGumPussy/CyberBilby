---
import type { MarkdownHeading } from 'astro';

interface Props {
    headings: MarkdownHeading[];
}

const { headings } = Astro.props;
let newHeadings = headings.filter((heading) => {
    return heading.depth < 3;
});
console.log(newHeadings);
---

<div style="display: block; position: sticky; top: 0">
    <h3>Table of Contents</h3>
    <ul>
        {
            newHeadings.map(header => {
                return <li><a href={`#${header.slug}`}>{header.text}</a></li>
            })
        }
    </ul>
</div>
